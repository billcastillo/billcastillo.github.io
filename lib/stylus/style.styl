/* General Rules */

html, body
	font-size $base-font-size
	font-family $header-font
	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale
	overflow-x hidden

h1,h2,h3,h4,h5,h6
	font-family $body-font
	font-family 'PT Sans'
	font-weight 400
	margin-bottom 0.50em
	//line-height ( 2 * ( 14px * $line-height) )
	//margin-top ( 14px * $line-height)
	// line-height (2 * $leading)
	// margin-top (2.5 * $leading)
	color $header-text
	letter-spacing -0.01em
	text-rendering optimizeLegibility
	
h1
	font-size 6em // 3.052em
	font-weight 700
	text-align center

h2
	font-size 2.441em // 2.66em
h3
	font-size 1.953em // 2.313em
h4
	font-size 1.563em
	//color lighten( $header-text, 25% )
h5
	font-size 1.25em
	font-weight 700
h6
	font-size 1.25em
	font-weight 700
	font-style italic
p
	font-family 'Lora'
	font-size 1.050em // 1.323em
	font-weight 400
	line-height 1.7
	margin-top 0
	margin-bottom 2.50em
	color $text // #F38181
	text-rendering geometricPrecision
	-webkit-font-smoothing subpixel-antialiased

a
	color #7E94BF

img
	max-width 100%

figure
	position relative
	margin 2em auto
	padding 1em
	text-align center
	img
		width 100%
	figcaption
		font-size 0.750em
		font-weight 400
		font-style italic
		line-height 1.6
		margin 0
		padding 0.50em
		text-align center
		color $grey-dark
	&::before,
	&::after
		content ''
		clear both

article
	padding-top 2em
	padding-bottom 2em
	section.full
		margin-left calc(-50vw + 50% + 8px)
		margin-right calc(-50vw + 50% + 10px)
		background $c1
		background-position center
		background-size cover

article,
.width-1000
	max-width 1000px
	margin-left auto
	margin-right auto
	h1
		color $c3
		text-shadow 1px 0px 1px rgba(0,0,0,0.35)
	h2,h3,h4,h5,h6,p,pre
		max-width 700px
		margin-left auto
		margin-right auto
	pre
		max-height 500px
		overflow auto

@media screen and (min-width: $sm)
	html, body
		font-size: 18px
	h1,h2,h3,h4,h5,h6
		//line-height ( 2 * ( 16px * $line-height) )
		//margin-top ( 2.5 * ( 16px * $line-height) )
