/* Main Style */

.main_container {
	max-width 1000px
	margin 0 auto
}

header
	position absolute
	width 100%
	top 10%
	right 0
	text-align center
	z-index 100
	#main_nav
		ul
			list-style none
			li
				position relative
				display inline-block
				margin-bottom 0.50em
				&:not(:last-child)
					margin-right 2em
					&::after
						position absolute
						content '/'
						right -1em
						font-size 1.50em
						color $white-text
				a
					font-size 1.50em
					font-weight 400
					font-variant small-caps
					letter-spacing 2px
					text-decoration none
					color $white-text
					transition all 0.3s cubic-bezier(.16,.53,.86,.67)
					&:hover
						color $links
						text-shadow 0px 1px 1px rgba(0,0,0,0.35)
.main_splash
	position relative
	min-height 100vh
	overflow hidden
	//background url('../img/me.svg')
	background-size cover
	background-position center center
	#particles-js
		absolute()
		display block
		background transparent
		background linear-gradient(135deg, transparent, #f2f2f2)
		-webkit-transform translateZ(0)
		ms-transform translateZ(0)
		transform translateZ(0) // increase animation performance
	.main_splash_text
		position absolute
		top 50%
		left 50%
		transform translate(-50%, -50%) scale(2)
		-moz-transform translate(-50%, -50%) scale(1)
		-webkit-transform translate(-50%, -50%) scale(2)
		zoom 0.5
		text-align center
		z-index 1000
		h1,h2
			font-family $header-font
			font-weight 400
			margin 0
			white-space nowrap
			letter-spacing 2px
		h1
			display inline-block
			font-size 3em // 2.50em
			color $header-text
			// text-transform uppercase
			// text-shadow 2px 1px 2px rgba(0,0,0,0.35)
			-moz-background transparent
			background $c1
			background -webkit-linear-gradient( 92deg, $c1, $c2 )
			background -moz-linear-gradient( 92deg, transparent, transparent )
			-webkit-background-clip text
			-webkit-text-fill-color transparent
			text-shadow 1px 1px 1px rgba(0, 0, 0, 0.08), 2px 2px 1px rgba(0, 0, 0, 0.075), 4px 4px 1px rgba(0, 0, 0, 0.07), 6px 6px 1px rgba(0, 0, 0, 0.065), 8px 8px 1px rgba(0, 0, 0, 0.06), 10px 10px 1px rgba(0, 0, 0, 0.055), 12px 12px 1px rgba(0, 0, 0, 0.05), 14px 14px 1px rgba(0, 0, 0, 0.045), 16px 16px 1px rgba(0, 0, 0, 0.04), 18px 18px 1px rgba(0, 0, 0, 0.035), 20px 20px 1px rgba(0, 0, 0, 0.03), 22px 22px 1px rgba(0, 0, 0, 0.025), 24px 24px 1px rgba(0, 0, 0, 0.02), 26px 26px 1px rgba(0, 0, 0, 0.015), 28px 28px 1px rgba(0, 0, 0, 0.01), 30px 30px 1px rgba(0, 0, 0, 0.005), 32px 32px 1px rgba(0, 0, 0, 0.0025), 34px 34px 1px rgba(0, 0, 0, 0.002), 36px 36px 1px rgba(0, 0, 0, 0.0015), 38px 38px 1px rgba(0, 0, 0, 0.001)
		h2
			font-size 1.250em // 1.50em
			font-weight 400
			margin-top 0
			color $white-text
			font-variant small-caps
		&::before
			position absolute
			content "Hi, I'm"
			top -15%
			left 0%
			color $white-text
			
@media screen and (min-width: $sm)
	.main_splash
		height 100vh
		.main_splash_text
			h1
				font-size 3em // 2em
			h2
				font-size 1.50em // 1.250em
			&::before
				left 5%


