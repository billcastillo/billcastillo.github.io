
/* Variables */

// COLORS
$black-head = #303030
$black-sub = #404040

$color1 = #625772
$color2 = #c06084
$grey-light = #A7FFEB
$grey-dark =  #767676
$links = #6084c0
$text = #a04c6c
$white = #f2f2f2
	
$base-font-size = 16px
$line-height = 1.6
$leading = 14px * $line-height;

// BG COLORS

$bg-1 = #FDFFA3
$bg-2 = #F59AF0
$bg-3 = #A980E4
$bg-4 = #A2E4A2

$c1 = #973c5e
$c2 = #1D2B53
$c3 = #fff357

$header-text = #853553
