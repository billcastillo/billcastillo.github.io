
/* Variables */

// COLORS
$black-head = #303030
$black-sub = #404040

$color1 = #625772
$color2 = #c06084
$grey-light = #A7FFEB
$grey-dark =  #767676
$links = #6084c0
$text = #a04c6c
$white = #f2f2f2
	
$base-font-size = 16px
$line-height = 1.6
$leading = 14px * $line-height;

// BG COLORS

$bg-1 = #FDFFA3
$bg-2 = #F59AF0
$bg-3 = #A980E4
$bg-4 = #A2E4A2

$c1 = #973c5e
$c2 = #1D2B53
$c3 = #fff357

$header-text = #853553

// Media Queries

$sm = 48em
$md = 64em
$lg = 75em

// Fonts

$header-font = 'Lora','Georgia','Helvetica','Arial',sans-serif
$body-font = 'PT Sans','Georgia','Times New Roman','TimesNewRoman',serif

/*********************************
/* MIXINS */

absolute()
	position absolute
	top 0
	left 0
	width 100%
	height 100%
 
vendor(prop, args)
	-webkit-{prop} args
	-moz-{prop} args
	-ms-{prop} args
	{prop} args
 
border-radius()
	vendor('border-radius', arguments)

/*
box-shadow()
	vendor('box-shadow', arguments) */

flex()
	vendor('flex')

/*
transition()
	vendor('transition', arguments) */

/*
linear-gradient()
	vendor('linear-gradient', arguments) */

filter()
	vendor('filter', arguments)

transform()
	vendor('transform', arguments)

animation()
	vendor('animation', arguments)

animation-duration()
	vendor('animation-duration', arguments)

/* General Rules */

html, body
	font-size $base-font-size
	font-family $header-font
	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale
	overflow-x hidden

h1,h2,h3,h4,h5,h6
	font-family $body-font
	font-family 'PT Sans'
	font-weight 400
	margin-bottom 0.50em
	//line-height ( 2 * ( 14px * $line-height) )
	//margin-top ( 14px * $line-height)
	// line-height (2 * $leading)
	// margin-top (2.5 * $leading)
	color $header-text
	letter-spacing -0.01em
	text-rendering optimizeLegibility
	
h1
	font-size 6em // 3.052em
	font-weight 700
	text-align center

h2
	font-size 2.441em // 2.66em
h3
	font-size 1.953em // 2.313em
h4
	font-size 1.563em
	//color lighten( $header-text, 25% )
h5
	font-size 1.25em
	font-weight 700
h6
	font-size 1.25em
	font-weight 700
	font-style italic
p
	font-family 'Lora'
	font-size 1.050em // 1.323em
	font-weight 400
	line-height 1.7
	margin-top 0
	margin-bottom 2.50em
	color $text // #F38181
	text-rendering geometricPrecision
	-webkit-font-smoothing subpixel-antialiased

a
	color #7E94BF

img
	max-width 100%

figure
	position relative
	margin 2em auto
	padding 1em
	text-align center
	img
		width 100%
	figcaption
		font-size 0.750em
		font-weight 400
		font-style italic
		line-height 1.6
		margin 0
		padding 0.50em
		text-align center
		color $grey-dark
	&::before,
	&::after
		content ''
		clear both

/*
figure.floatLeft,
figure.floatRight
	max-width 350px
*/

article
	padding-top 2em
	padding-bottom 2em
	section.full
		margin-left calc(-50vw + 50% + 8px)
		margin-right calc(-50vw + 50% + 10px)
		background $c1
		background-position center
		background-size cover

article,
.width-1000
	max-width 1000px
	margin-left auto
	margin-right auto
	h1
		color $c3
		text-shadow 1px 0px 1px rgba(0,0,0,0.35)
	h2,h3,h4,h5,h6,p,pre
		max-width 700px
		margin-left auto
		margin-right auto
	pre
		max-height 500px
		overflow auto



@media screen and (min-width: $sm)
	html, body
		font-size: 18px
	h1,h2,h3,h4,h5,h6
		//line-height ( 2 * ( 16px * $line-height) )
		//margin-top ( 2.5 * ( 16px * $line-height) )
		// line-height (2 * $leading)
		// margin-top (2.5 * $leading)
	figure
		margin 0 auto
	figure.floatCenter
		max-width 700px;
	p
		font-size 1.050em
		line-height 1.735

/* General CLASS */

.main_container
	padding 0 0.50em

.floatRight
	float none
.floatLeft
	float none
	
.blockQuote
	margin 2em 0 1.50em 0
	font-style italic

.height-100
	height 100vh

.width-700
	max-width 700px
	margin-left auto
	margin-right auto

.border
	padding 0.250em
	border 1px solid $black-head


@media screen and (min-width: $sm)
	.main_container
		padding 0
	.floatRight
		float right
	.floatLeft
		float left


/* Main Style */

